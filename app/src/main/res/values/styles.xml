<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.TextView" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="edit_story">
        <item name="android:background">@color/color_text_black</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Fullscreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <declare-styleable name="CropperView">
        <attr name="grid_color" format="color"/>
        <attr name="grid_thickness" format="dimension"/>
        <attr name="grid_opacity" format="float"/>
        <attr name="padding_color" format="color"/>
        <attr name="add_padding_to_make_square" format="boolean"/>
    </declare-styleable>


</resources>
