<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
 <android.support.design.widget.TabLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:id="@+id/tab_layout_select_photo"
     app:tabIndicatorHeight="1dp"
     app:tabPaddingEnd="5dp"
     app:tabPaddingStart="5dp"
     android:scrollbarSize="5dp">
 <android.support.design.widget.TabItem
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/lbl_string_gallery"
     style="@style/Base.TextAppearance.AppCompat.Caption" />
    <android.support.design.widget.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_string_camera"
        style="@android:style/TextAppearance.Material.Caption" />
</android.support.design.widget.TabLayout>

    <com.bhuvanesh.talenthive.photography.view.CustomPhotoViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_pager_select_photo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/tab_layout_select_photo" />
</RelativeLayout>