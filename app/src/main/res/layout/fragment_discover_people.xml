<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_find_people"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_dimlight_gray"/>

    <TextView
        android:id="@+id/textview_google_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/common_google_signin_btn_icon_light"
        android:drawableLeft="@drawable/common_google_signin_btn_icon_light"
        android:text="@string/lbl_google"
        android:gravity="center_vertical"
        android:drawablePadding="5dp"/>

</LinearLayout>